<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <title>シンプルルーレット</title>
</head>
<body>
  <h1>シンプルルーレット</h1>

  <p>カンマ（,）で区切って項目を入力してください。</p>
  <p>例：Aさん,Bさん,Cさん</p>

  <textarea id="items" rows="4" cols="40">1,2,3,4,5,6</textarea>
  <br>
  <button id="startBtn">スタート</button>

  <p id="result">結果：まだ未実行</p>

  <script>
    // ボタンがクリックされたときの処理
    document.getElementById("startBtn").onclick = function () {
      // テキストエリアの中身を取得
      var text = document.getElementById("items").value;

      // カンマで分割
      var rawItems = text.split(",");

      // 前後の空白を削って、空っぽの文字は除外
      var items = [];
      for (var i = 0; i < rawItems.length; i++) {
        var s = rawItems[i].trim();
        if (s.length > 0) {
          items.push(s);
        }
      }

      // 何も入力されていないとき
      if (items.length === 0) {
        alert("項目を入力してください。");
        return;
      }

      // 0 〜 items.length-1 のランダムな数
      var randomIndex = Math.floor(Math.random() * items.length);

      // ランダムに1つ選ぶ
      var selected = items[randomIndex];

      // 結果を画面に表示
      document.getElementById("result").textContent = "結果：" + selected;
    };
  </script>
</body>
</html>
